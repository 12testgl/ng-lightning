section.slds-m-top--x-large([id]="component.key")
  h1.slds-text-heading--large
    | {{component.title}}
    button.slds-button.slds-button--neutral.slds-button--small((click)="onTry.emit(component)", style="float:right; font-size:small;")
      | TRY IN PLUNKER
  hr.slds-m-top--small.slds-m-bottom--large
  .slds-grid
    .slds-col.slds-size--1-of-2
      ng-content
    .slds-col.slds-size--1-of-2
      .slds-p-horizontal--small.readme(ngNonBindable, [innerHtml]="component.readme")
  .slds-grid.slds-m-top--large
    .slds-col
      ngl-tabs([(selected)]="selectedTab")
        template(ngl-tab, heading="Markup")
          pre.language-html
            code.language-html(ngNonBindable, [innerHtml]="html()")
        template(ngl-tab, heading="Typescript")
          pre.language-typescript
            code.language-typescript(ngNonBindable, [innerHtml]="ts()")
        template(ngl-tab, heading="API")
          pre.language-markup
            code.language-markup.api(ngNonBindable, [innerHtml]="component.api")
