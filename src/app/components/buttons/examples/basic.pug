button(type="button", nglButton="success") Success
button(type="button", nglButton="neutral") Neutral
button(type="button", [nglButton]="selected ? 'destructive' : 'neutral'")
  ngl-icon(iconName="download", align="left") Delete

button(type="button", nglButton="neutral", (click)="change()") Change

div.slds-text-title--caps.slds-m-top--x-large.slds-m-bottom--small Stateful

button(type="button", nglButton="neutral", [(nglButtonState)]="selected")
  ngl-icon(iconName="add", state="not-selected") Follow
  ngl-icon(iconName="check", state="selected") Following
  ngl-icon(iconName="close", state="selected-focus") Unfollow
