    button(type="button", nglButton, nglPopoverPlacement='top', [nglPopover]="tip", [(nglPopoverOpen)]="open.t") top
    button(type="button", nglButton, nglPopoverPlacement='top-right', [nglPopover]="tip", [(nglPopoverOpen)]="open.tr") top-right
