    .slds-col
      .slds-grid.slds-grid_vertical
        span.slds-m-bottom_xx-small: button.slds-button_stretch(type="button", nglButton, nglPopoverPlacement='left-top', [nglPopover]="tip", [(nglPopoverOpen)]="open.lt") left-top
