span(nglDropdown, [open]="open", (openChange)="openChange.emit($event)")
  ng-content

  button.slds-button.slds-button_icon.slds-button-space-left.slds-shrink-none(nglDropdownTrigger)
    svg.slds-button__icon(nglIconCategory="utility", nglIcon="down")

  .slds-dropdown.slds-dropdown_left(*ngIf="open")
    ul.dropdown__list
      li.slds-dropdown__item(*ngFor="let s of scope.scopes", (click)="onScopeChange(s)", (keydown.Enter)="onScopeChange(s)")
        a(role="menuitem", nglDropdownItem)
          ng-template([ngTemplateOutlet]="scope.templateRef", [ngTemplateOutletContext]="{ $implicit: s }")
