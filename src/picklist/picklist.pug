.slds-picklist(nglDropdown, [open]="open", (openChange)="openChange.emit($event)", [ngClass]="{'slds-picklist_fluid': fluid}")
  button.slds-button.slds-button_neutral.slds-picklist__label(type="button", nglDropdownTrigger, [disabled]="disabled")
    ng-content
    svg.slds-icon(nglIcon="down")
  .slds-dropdown.slds-dropdown_left([ngClass]="{ 'slds-p-top_none': hasFilter }")
    input.slds-input(*ngIf="hasFilter", #filterInput, type="text", [attr.placeholder]="filterPlaceholder", [ngModel]="filter", (ngModelChange)="filterChange($event)",
                    (keydown.enter)="onFilterPick()", (keydown.arrowdown)="setFilterActive(1, $event)", (keydown.arrowup)="setFilterActive(-1, $event)",
                    (focus)="onFilterFocus()", (blur)="onFilterBlur()")
    ul.dropdown__list(role="menu", [ngClass]="dropdownListClass")
      li.slds-dropdown__item(*ngFor="let item of filteredData; let i = index", [nglPickOption]="item", nglPickActiveClass="slds-is-selected",
        [class.slds-is-active]="isOptionActive(i)", (mouseover)="onOptionHover(i)")
        a(role="menuitem", nglDropdownItem)
          p.slds-truncate
            svg.slds-icon.slds-icon_selected.slds-icon_x-small.slds-icon-text-default.slds-m-right_x-small(nglIcon="check")
            ng-template([ngTemplateOutlet]="itemTemplate?.templateRef", [ngTemplateOutletContext]="{$implicit: item}")
