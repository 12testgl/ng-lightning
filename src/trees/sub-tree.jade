.slds-tree__item(tabindex="-1")
  button.slds-button.slds-button--icon-bare.slds-m-right--x-small(nglSubTreeTrigger)
    svg.slds-button__icon.slds-button__icon--small(aria-hidden="true")
      use(xlink:href="assets/icons/utility-sprite/svg/symbols.svg#chevronright")
  ng-content(select="[nglTreeHeading]")
div(
  [ngClass]="isExpanded ? 'slds-is-expanded' : 'slds-is-collapsed slds-hidden'",
  role="group", tabindex="-1", [attr.aria-labelledby]="'ngl-sub-tree-heading-' + uniqueId"
)
  ng-content(select="[nglTreeBranch], [nglSubTree]")
